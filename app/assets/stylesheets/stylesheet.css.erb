body {
	font-family: 'Quicksand', sans-serif;
	text-align: center;
}

span {
	text-decoration: underline;
}

#main_nav {
	display: block;
	font-size: 2em;
	font-weight: 700;
	text-align: center;
	background-color: #b8b8b8;
	padding-top: .5%;
	padding-bottom: .5%;
	position: fixed;
	top: 0;
	width: 99%;
	z-index: 1;
}	

.members_nav {
	display: block;
	font-size: 1.25em;
	text-align: center;
	background-color: #b8b8b8;
}

h1 {
	font-size: 5em;
	text-align: left;
	margin-top: 7%;
}

h2 {
	font-size: 2.5em;
}

h3 {
	font-size: 2em;
}

h4 {
	font-size: 1.5em;
}

h5 {
	font-size: 1.25em;
}

p {
	font-family: 'Baskerville', serif;
	font-size: 1.25em;
	text-align: justify;
	line-height: 125%;
}

#logo {
	margin-top: 4%;
	margin-bottom: -1%;
	width: 100%;
}

a:hover {
	background-color: #FF9966;
}	

#sponsor {
	background-color: white;
}

a {
	color: black;
	text-decoration: none;
}

.history-link {
	font-size: 1.5em;
	text-decoration: underline;
}

#pss {
	width: 100%;
}

#singers {
	margin-top: -.5%;
	margin-bottom: -.25%;
}

footer {
	width: 100%;
	display: block;
	text-align: right;
	margin-right: 1%;
	padding-top: .5%;
	padding-bottom: .5%;
	background-color: #b8b8b8;
}

video {
	margin: 0 auto;
}

.Background {
	background-color: #f0f0f0;
	width: 100%;
	height: 100%;
	margin-top: -.5%;
}

.About {
	width: 65%;
	margin: 0 auto;
	background-color: white;
	padding: 5px 15px 25px 15px;

}

#copy {
	float: right;
	margin-right: 1%;
	padding-left: 1%;
}

#link {
	margin-right: .5%;
	padding: 0 .75% 0 .75%;
}

#tag:hover {
	background-color: white;
}

#link:hover {
	background-color: #b8b8b8;
}

ul {
	font-family: 'Baskerville', serif;
	font-size: 1.25em;
	text-align: justify;
	list-style: none;
}

ol {
	font-family: 'Baskerville', serif;
	font-size: 1.25em;
	text-align: justify;
	list-style: decimal;
}

.dress_code {
	list-style-type: disc; 
}

.list_head {
	margin-left: 2%;
}

#footnote {
	font-size: 1em;
	text-align: center;
}

#line1 {
	height: 3px;
	background-color: black;
	margin-bottom: 0;
	padding-bottom: 0;
	width: 100%;
}

#line2 {
	height: 7px;
	background-color: #FF9966;
	border: none;
	padding-top: 0;
	margin-top: 0;
	width: 100%;
}

#Rehearsal {
	width: 100%;
}

.director {
	float: left;
	width: 25%;
	border-radius: 5%;
	margin: 1% 1% 0% 0%;
}

.info {
	font-family: 'Baskerville', serif;
	font-size: 1.4em;
	text-align: left;
}

.support {
	text-align: center;
	font-family: 'Baskerville', serif;
	font-size: 1.5em;
	width: 100%;
	margin-top: 2%;
}

.column_1 {
	width: 50%;
}

#column_2 {
	width: 25%;
}

.form {
	text-align: left;
	font-family: 'Baskerville', serif;
	font-size: 1.25em;
	width: 80%;
	margin-top: 2%;
}

.input {
	width: 100%;
	font-family: "Baskerville", serif;
	font-size: 1em;
}

button {
	height: 10%;
	width: 20%;
	font-family: "Baskerville", serif;
	font-weight: bold;
	border-radius: 5px;
	font-size: 1.25em;
}

button:hover {
	background-color: #FF9966;
	border-color: #FF9966;
}

.members {
	width: 100%;
	height: 100%;
	font-size: 2em;
}

#submit:hover {
	background-color: #FF9966;
	border-color: #FF9966;
}

#member_info {
	width: 90%;
	margin: 0 auto;
}

@media only screen and (max-width: 768px) {
	nav {
		font-size: 1.5em;
	}
	h1 {
		font-size: 3em;
		margin-top: 12%
	}
	h2 {
		font-size: 1.5em;
	}
	h3 {
		font-size: 1.5em;
	}
	h4 {
		font-size: 1.25em;
	}
	h5 {
		font-size: 1em;
	}
	p {
		font-size: 1em;
	}
	.info {
		font-size: 1em;
	}
	button {
		font-size: 1em;
	}
	.support {
		font-size: 1em;
	}
	.form {
		font-size: 1em;
	}
	#submit {
		font-size: 1em;
	}
	.members {
		font-size: 1.5em;
	}
}

@media only screen and (max-width: 480px) {
	nav {
		font-size: 1em;
	}
	h1 {
		font-size: 2em;
	}
	footer {
		padding-top: 2%;
		padding-bottom: 2%;
	}
	.members {
		font-size: 1em;
	}

}

